<tmpl_ex hidden="1">
	my($self, $param)= @_;
	(! $param->{amazon_disp} || ref($param->{amazon_disp}) ne 'ARRAY') and return 0;
	my $max= $param->{amazon_max_disp} || 5;
	my @temp;
	while (@{$param->{amazon_disp}})
	{ push(@temp, splice(@{$param->{amazon_disp}}, rand(@{$param->{amazon_disp}}), 1)) }
	@temp= splice @temp, 0, $max;
	$param->{amazon_disp}= \@temp;
